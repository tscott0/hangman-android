<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/game_word"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:letterSpacing="0.6"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                tools:text="I_E_REAM" />

            <LinearLayout
                android:id="@+id/game_ended"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/end_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ef5350"
                    android:textSize="30sp"
                    tools:text="YOU WON ðŸ˜" />

                <TextView
                    android:id="@+id/target_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    tools:text="ICECREAM" />

            </LinearLayout>

            <TextView
                android:id="@+id/incorrect_guesses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                tools:text="PTIEREAM" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/guess_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_letter_hint"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:maxLines="1" />

            <Button
                android:id="@+id/guess_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guess_button_text" />

            <Button
                android:id="@+id/reset_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_button_text"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>